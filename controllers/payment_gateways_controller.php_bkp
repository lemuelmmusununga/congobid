						$item['quantity']    = 1;
						$item['price']       = number_format($auction['Auction']['total'], 2);
						$item['currency']    = $gateway['currency'];
						$item['merchant_id'] = 'auction#'.$id.'#'.$this->Auth->user('id');
			
