                    break;
                case 'package':
                    $package   = $this->_getPackage($id);

                    $data['merchant_id'] = $gateway['merchant_id'];
                    $data['local']       = $gateway['local'];
                    $data['charset']     = $gateway['charset'];
						$data['sandbox'] 	 = $gateway['sandbox'];

						$item['name'] 		 = $package['Package']['name'];
